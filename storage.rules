rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own folder
    // Allow authenticated users to upload images to their own folder
    match /articles/{userId}/{allPaths=**} {
      allow read: if true; // Public read for marketplace images
      allow write: if request.auth != null;
                   // && request.auth.uid == userId
                   // && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   // && request.resource.contentType.matches('image/.*');
    }
    
    // Allow authenticated users to upload service images to their own folder
    match /services/{userId}/{fileName} {
      allow read: if true; // Public read for marketplace images
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Allow authenticated users to upload profile images
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
